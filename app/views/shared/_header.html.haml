%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.px-3
  = link_to 'InstaVideo', root_path, class: 'navbar-brand'
  %button.navbar-toggler{ 'aria-controls' => 'navbarSupportedContent', 'aria-expanded' => 'false', 'aria-label' => 'Toggle navigation', 'data-target' => '#navbarSupportedContent', 'data-toggle' => 'collapse', type: 'button' }
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    .d-flex.flex-column.ml-auto
      %form.form-inline
        %input.form-control.mr-sm-2{ 'aria-label' => 'email', placeholder: 'Email', type: 'email' }
        %input.form-control.mr-sm-2{ 'aria-label' => 'password', placeholder: 'Password', type: 'password' }
        %button.btn.btn-outline-light.my-2.my-sm-0{ type: 'submit' } Login
      .text-light.mt-1{ type: 'button', 'data-toggle' => 'modal', 'data-target' => '#registerModal' } New? register now
      = render 'shared/register_modal'
